@model pe1.Webshop.Domain.Item

<div class=" col-lg-3 col-md-6 col-sm-12 pb-1">

    <div class="card product-item border-0 mb-4">
        <img class="card-img-top" src="@Model.Img" alt="@Model.Name" style="height: 500px" />
        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
            <h2>@Model.Name</h2>
            <p>@Model.ShortDescr.</p>
            <p>Price: @Model.Price.ToString("c")</p>

            <div class="card-footer d-flex justify-content-between bg-light border">
                <a href="@Model.Img" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
            </div>
            @*<p>  <a class="btn btn-warning" href="=@Model.Img">Show more</a> </p>*@
        </div>
    </div>



</div>