@model pe1.Webshop.Web.ViewModels.CategoriesIndexVm

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

<div class="row" style="margin-top:1em;">
    <div class="col-md-12 ">
        @foreach (var category in Model.Categories)
        {
            <a class="btn btn-success" href="/categories/@category.Id">@category.Name</a>
        }
    </div>
</div>